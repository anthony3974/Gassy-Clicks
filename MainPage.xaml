<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gassy_Clicks.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label>Distance</Label>
            <Entry x:Name="distance" TextChanged="TextChanged"></Entry>
            <Label>Fuel Efficinty l/100km</Label>
            <Entry x:Name="FE" TextChanged="TextChanged"></Entry>
            <Label>Cost of Gas</Label>
            <Entry x:Name="CoG" TextChanged="TextChanged"></Entry>
            <Label x:Name="Error" TextColor="Red"></Label>
            <Label>Total is: </Label>
            <Label x:Name="total"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
